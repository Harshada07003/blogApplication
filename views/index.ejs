<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog</title>
  <link rel="stylesheet" href="/style/style.css">
</head>

<body>
  <div class="container">
    <h1>My Blog Application
    </h1>
    <a id="newPostBtn" href="/posts/new">New Post</a>
    <ul id="postsList">
      <% posts.forEach(post=> { %>
        <li>
          <h2>
            <%=post.title%>
          </h2>
          <small>
            <%=post.date %>
          </small>
          <p>
            <%=post.content%>
          </p>
          <small>By: <%=post.author%> </small>
          <a class="edit" href="/posts/<%= post.id %>/edit">Edit</a>
          <form action="/posts/<%= post.id %>/delete" method="POST" style="display:inline;">
            <button type="submit" class="delete" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
          </form>
        </li>
        <% }); %>
    </ul>
  </div>
</body>
</html>